<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
         >
        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView

                android:id="@+id/ad_image"

                android:layout_width="140dp"
                android:layout_height="86dp" />
        </LinearLayout>
        <LinearLayout

            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/vmax_custom_title"
                android:text="Your app monetization is now even more secure with the latest VMAX SDK"

                android:textSize="14dp"
                android:textColor="@color/initial_font_gotham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/vmax_custom_desc"
                android:text="Tuesday March 21st, 2017 | Blog, Product"
                android:layout_margin="3dp"
                android:textSize="8dp"
                android:textColor="@color/blog_descp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:id="@+id/vmax_custom_media_view"
                android:layout_width="320dp"
                android:layout_height="200dp"
                android:layout_gravity="bottom|center"
                android:gravity="bottom|center"
                android:visibility="gone"/>

            <Button
                android:id="@+id/vmax_custom_cta"
                android:textStyle="italic"
                android:textColor="@color/blog_descp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <FrameLayout
            android:id="@+id/vmax_custom_adChoiceView"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="top|right"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:visibility="visible">
        </FrameLayout>

        <ImageView
            android:id="@+id/vmax_custom_otherimg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="bottom|center"
            android:gravity="bottom|center"

            android:visibility="gone" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/vmax_adChoiceLayout"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_weight="0.3"
            android:gravity="top|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vmax_sponsored"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:background="@drawable/vmax_nativebg_ad"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginRight="1dp"
                android:text="@string/vmax_advertisment_text"
                android:textColor="@color/vmax_black"
                android:textSize="8sp" />

            <ImageView
                android:id="@+id/vmax_adchoice"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/vmax_adchoice_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:src="@drawable/vmax_adchoices"
            android:visibility="gone"/>
    </FrameLayout>

    </RelativeLayout>

